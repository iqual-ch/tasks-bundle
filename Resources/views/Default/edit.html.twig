{% extends layout %}

{% block content %}
    <div class="page-header">{{ 'title.edit_task'|trans({}, 'TasksBundle') }}</div>
    {% block tasks_pre_form %}
    {% endblock %}
    
    {% block tasks_form %}
        {% set submit = form_widget(form.submit) %}
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="well well-small form-actions">
            {{ submit|raw }}
            
            {% if redirect %}
            <a href="{{ redirect }}" class="btn btn-default">{{ 'btn.cancel'|trans({}, 'TasksBundle') }}</a>    
            {% else %}
            <a href="{{ path('tasks_list') }}{% if redirect is not null %}?redirect={{ redirect }}{% endif %}" class="btn btn-default">{{ 'btn.cancel'|trans({}, 'TasksBundle') }}</a>
            {% endif %}
        </div>
        {{ form_end(form) }}
    {% endblock %}
    
    {% block tasks_post_form '' %}
{% endblock %}